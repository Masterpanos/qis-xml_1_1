<?xml version="1.0" encoding="UTF-8"?>
<module name="qis"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:r="qis:1_1">
  <yang-version value="1"/>
  <namespace uri="qis:1_1"/>
  <prefix value="r"/>
  <contact>
    <text>“pascal.heus@gmail.com”</text>
  </contact>
  <description>
    <text>This module is a YANG version of the QIS-XML 1.1 specification.</text>
  </description>
  <revision date="2016-09-03">
    <description>
      <text>Draft version</text>
    </description>
  </revision>
  <container name="complex-number">
    <uses name="ComplexNumberType"/>
  </container>
  <grouping name="ComplexNumberType">
    <description>
      <text>A complex number</text>
    </description>
    <leaf name="r">
      <type name="decimal64">
        <fraction-digits value="10"/>
      </type>
      <default value="0"/>
      <description>
        <text>Real component</text>
      </description>
    </leaf>
    <leaf name="i">
      <type name="decimal64">
        <fraction-digits value="10"/>
      </type>
      <default value="0"/>
      <description>
        <text>Imaginary component</text>
      </description>
    </leaf>
    <list name="symbolic">
      <key value="syntax"/>
      <uses name="SymbolicStringType"/>
    </list>
  </grouping>
  <container name="input">
    <description>
      <text>A Gate/Circuit Input</text>
    </description>
    <uses name="InputType"/>
  </container>
  <grouping name="InputType">
    <leaf name="number">
      <type name="uint16"/>
    </leaf>
    <uses name="NameDescType">
      <refine target-node="name">
        <mandatory value="true"/>
      </refine>
    </uses>
  </grouping>
  <grouping name="IdentificationType">
    <leaf name="id">
      <type name="string"/>
      <mandatory value="true"/>
    </leaf>
    <leaf name="version">
      <type name="string"/>
    </leaf>
    <leaf name="agency">
      <type name="string"/>
    </leaf>
  </grouping>
  <container name="matrix-cell">
    <uses name="MatrixCellType"/>
  </container>
  <grouping name="MatrixCellType">
    <description>
      <text>A complex number in a square Matrix</text>
    </description>
    <leaf name="row">
      <description>
        <text>The cell row</text>
      </description>
      <type name="uint32"/>
    </leaf>
    <leaf name="col">
      <description>
        <text>The cell row</text>
      </description>
      <type name="uint32"/>
    </leaf>
    <uses name="ComplexNumberType"/>
  </grouping>
  <container name="matrix">
    <uses name="MatrixType"/>
  </container>
  <grouping name="MatrixType">
    <description>
      <text>A matrix</text>
    </description>
    <list name="cell">
      <key value="row col"/>
      <uses name="MatrixCellType"/>
    </list>
  </grouping>
  <grouping name="NameDescType">
    <description>
      <text>A Name and Description</text>
    </description>
    <leaf name="name">
      <type name="string"/>
    </leaf>
    <leaf name="description">
      <type name="string"/>
    </leaf>
  </grouping>
  <container name="output">
    <description>
      <text>A Gate/Circuit Output</text>
    </description>
    <uses name="OutputType"/>
  </container>
  <grouping name="OutputType">
    <leaf name="number">
      <type name="uint16"/>
    </leaf>
    <uses name="NameDescType">
      <refine target-node="name">
        <mandatory value="true"/>
      </refine>
    </uses>
  </grouping>
  <container name="qubit">
    <uses name="QubitType"/>
  </container>
  <grouping name="QubitType">
    <container name="zero">
      <uses name="ComplexNumberType"/>
    </container>
    <container name="one">
      <uses name="ComplexNumberType"/>
    </container>
  </grouping>
  <container name="symbolic-string">
    <uses name="SymbolicStringType"/>
  </container>
  <grouping name="SymbolicStringType">
    <description>
      <text>Can be used to describe a symbolic expression in various syntaxes</text>
    </description>
    <leaf name="value">
      <mandatory value="true"/>
      <type name="string"/>
    </leaf>
    <leaf name="syntax">
      <type name="string"/>
    </leaf>
  </grouping>
</module>
